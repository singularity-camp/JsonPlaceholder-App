<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.user_profile.UserProfileFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Header1"
        android:textColor="@color/text_01"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        tools:text="Username here"/>

    <kz.tutorial.jsonplaceholdertypicode.presentation.utils.UserInfoItem
        android:id="@+id/item_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Header2"
        android:textColor="@color/text_01"
        android:text="@string/company"
        android:layout_gravity="start"
        android:layout_marginVertical="8dp"/>

    <kz.tutorial.jsonplaceholdertypicode.presentation.utils.UserCompanyItem
        android:id="@+id/item_user_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingVertical="8dp"
        style="@style/Header2"
        android:textColor="@color/text_01"
        android:text="@string/address"/>

    <kz.tutorial.jsonplaceholdertypicode.presentation.utils.UserAddressItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_user_address"/>

</LinearLayout>