<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_street_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Street"
                android:textAppearance="@style/Header4"
                android:textColor="@color/text_02" />

            <TextView
                android:id="@+id/tv_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/Header4"
                android:textColor="@color/text_01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_suite_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/suite"
                android:textAppearance="@style/Header4"
                android:textColor="@color/text_02" />

            <TextView
                android:id="@+id/tv_suite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/Header4"
                android:textColor="@color/text_01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_city_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/city"
                android:textAppearance="@style/Header4"
                android:textColor="@color/text_02" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/Header4"
                android:textColor="@color/text_01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_zipcode_desc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/zipcode"
                android:textAppearance="@style/Header4"
                android:textColor="@color/text_02" />

            <TextView
                android:id="@+id/tv_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/Header4"
                android:textColor="@color/text_01" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_show_on_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:text="@string/show_on_map"
            android:textAlignment="center"
            android:textAppearance="@style/Header2"
            android:textColor="@color/links" />


    </LinearLayout>

</androidx.cardview.widget.CardView>