<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_user_company"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cv_user_company_tv_hint_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/company_name"
            android:textAppearance="@style/Header4"
            android:textColor="@color/text_02"
            app:fontFamily="@font/open_sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cv_user_company_tv_hint_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/full_name"
            android:textAppearance="@style/Header4"
            android:textColor="@color/text_02"
            app:fontFamily="@font/open_sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/cv_user_company_tv_hint_1"
            app:layout_constraintTop_toBottomOf="@id/cv_user_company_tv_hint_1"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cv_user_company_tv_hint_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/business_services"
            android:textAppearance="@style/Header4"
            android:textColor="@color/text_02"
            app:fontFamily="@font/open_sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/cv_user_company_tv_hint_2"
            app:layout_constraintTop_toBottomOf="@id/cv_user_company_tv_full_name"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cv_user_company_tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/Header4"
            android:textColor="@color/text_01"
            app:fontFamily="@font/open_sans"
            app:layout_constraintBottom_toBottomOf="@id/cv_user_company_tv_hint_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/cv_user_company_barrier"
            app:layout_constraintTop_toTopOf="@id/cv_user_company_tv_hint_1"
            tools:text="@string/email_w_colon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cv_user_company_tv_full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/Header4"
            android:textColor="@color/text_01"
            app:fontFamily="@font/open_sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/cv_user_company_barrier"
            app:layout_constraintTop_toTopOf="@id/cv_user_company_tv_hint_2"
            tools:text="@string/full_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cv_user_company_tv_business"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/Header4"
            android:textColor="@color/text_01"
            app:fontFamily="@font/open_sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/cv_user_company_barrier"
            app:layout_constraintTop_toTopOf="@id/cv_user_company_tv_hint_3"
            tools:text="@string/business_services" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/cv_user_company_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:barrierDirection="end"
            app:constraint_referenced_ids="cv_user_company_tv_hint_1, cv_user_company_tv_hint_2, cv_user_company_tv_hint_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>